extends ./template.pug

block content
	.row
		.col-md-12
			.card
				.card-header
					h4.card-title Generate Bills
				.card-body
					table#billTable.table.table-bordered.table-striped(cellspacing='0')
						thead
							tr
								th Lessee Name
								th Stall ID
								th Rental Bill
								th Utility Bills
						tbody
							each contract in contracts
								tr
									td #{contract.strFirstName} #{contract.strMiddleName} #{contract.strLastName}
									td #{contract.strStallId}
									td 
										button.btn.btn-info.btn-round.rental(contractId=`${contract.intId}` lesseeName=`${contract.strFirstName} ${contract.strMiddleName} ${contract.strLastName}` stallId=`${contract.strStallId}`) Generate Rental Bill
									td
										button.btn.btn-info.btn-round.utility(contractId=`${contract.intId}` lesseeName=`${contract.strFirstName} ${contract.strMiddleName} ${contract.strLastName}` stallId=`${contract.strStallId}`) Generate Utility Bill
