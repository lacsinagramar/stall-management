extends ../../../templates/user-template.pug

block headAddOns

block body
    .login-page
        .page-header.header-filter(filter-color='orange')
            .page-header-image(style='background-image:url(/assets/now-ui/img/login.jpg)')
            .content
                .container
                    .col-md-5.ml-auto.mr-auto
                        .card.card-login.card-plain
                            form.form(method='', action='')
                                .card-header.text-center
                                    .logo-container
                                        img(src='/assets/now-ui/img/now-logo.png', alt='')
                                .card-body
                                    .input-group.no-border.input-lg
                                        .input-group-prepend
                                            span.input-group-text
                                                i.now-ui-icons.users_circle-08
                                        input.form-control(type='text', placeholder='Username')
                                    .input-group.no-border.input-lg
                                        .input-group-prepend
                                            span.input-group-text
                                                i.now-ui-icons.text_caps-small
                                        input.form-control(type='password', placeholder='Password')
                                .card-footer.text-center
                                    a.btn.btn-primary.btn-round.btn-lg.btn-block(href='#pablo') Login
